---
export interface Props {
  title: string;
  subtitle?: string;
  image?: string;
  label?: string;
  overlay?: boolean;
  overlayStyle?: 'light' | 'dark';
  textLight?: boolean;
}
const {
  title,
  subtitle = '',
  image = '/solarpanels-miltonkeynes.webp',
  label = '',
  overlay = false,
  overlayStyle = 'dark',
  textLight = false,
} = Astro.props as Props;
---

<section class="relative pt-32 pb-20 min-h-[56vh] md:min-h-[60vh] lg:min-h-[64vh]" id="main-content">
  <div class="absolute inset-0">
    <img src={image} alt="Solar panels in Milton Keynes" class="w-full h-full object-cover" loading="eager" fetchpriority="high" decoding="async" sizes="100vw" />
    {overlay && (
      overlayStyle === 'dark'
        ? <div class="absolute inset-0 bg-gradient-to-r from-black/65 via-black/45 to-black/10"></div>
        : <div class="absolute inset-0 bg-gradient-to-r from-white/90 via-white/75 to-white/20"></div>
    )}
  </div>
  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl pt-2 md:pt-4">
      {label && (
        <div class={`mb-4 inline-flex items-center gap-2 px-3 py-1 rounded-full backdrop-blur-md border shadow-sm ${textLight ? 'bg-white/15 border-white/25' : 'bg-white/50 border-white/40'}`}>
          <span class="w-2 h-2 rounded-full bg-accent"></span>
          <span class={`text-xs uppercase tracking-wide font-semibold ${textLight ? 'text-white' : 'text-neutral-700'}`}>{label}</span>
        </div>
      )}
      <h1 class={`text-4xl md:text-5xl lg:text-6xl font-lufga leading-tight mb-3 ${textLight ? 'text-white' : 'text-text-dark'}`}>{title}</h1>
      {subtitle && (<p class={`text-lg md:text-xl max-w-2xl ${textLight ? 'text-white/90' : 'text-neutral-700'}`}>{subtitle}</p>)}
    </div>
  </div>
  
</section>


