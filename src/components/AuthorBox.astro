---
export interface Props {
  author?: {
    name: string;
    title: string;
    bio: string;
    image: string;
    linkedIn?: string;
    email?: string;
  };
}

const { author } = Astro.props;

// Default author (Emily Harris from content guide)
const defaultAuthor = {
  name: 'Emily Harris',
  title: 'MCS‑Certified Solar Assessor',
  bio: 'Emily Harris is a Milton Keynes–based solar energy specialist with 8+ years of hands‑on experience advising homeowners on solar PV system design, battery storage sizing, and UK grant eligibility. Emily founded Milton Keynes Solar Panels to help local residents quickly connect with vetted, MCS‑certified installers who deliver high‑quality workmanship and reliable aftercare. She reviews every guide for technical accuracy, keeps pricing and grant information up to date, and champions transparent, data‑driven decisions so homeowners can confidently cut their energy bills and carbon footprint.',
  image: '/profile-set-hero (1)_compressed.webp',
  linkedIn: undefined,
  email: 'solarpanelsmiltonkeynes@gmail.com',
};

const authorData = author || defaultAuthor;

// Author structured data
const authorSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  '@id': '#author-emily',
  name: authorData.name,
  jobTitle: authorData.title,
  description: authorData.bio,
  image: new URL(authorData.image, Astro.site).toString(),
  url: new URL('/about', Astro.site).toString(),
  ...(authorData.linkedIn && {
    sameAs: [authorData.linkedIn]
  }),
};
---

<div class="bg-gradient-to-r from-primary-50 to-secondary-50 border border-primary-100 rounded-lg p-6 mt-8">
  <div class="flex items-start space-x-4">
    <img 
      src={authorData.image} 
      alt={`${authorData.name} - ${authorData.title}`}
      class="w-16 h-16 rounded-full object-cover flex-shrink-0"
      loading="lazy"
    />
    <div class="flex-1">
      <div class="flex items-center space-x-2 mb-2">
        <h4 class="font-semibold text-neutral-900">{authorData.name}</h4>
        <span class="text-sm text-primary-600 font-medium">{authorData.title}</span>
      </div>
      <p class="text-sm text-neutral-600 mb-3">{authorData.bio}</p>
      <div class="flex items-center space-x-4">
        {authorData.linkedIn && (
          <a 
            href={authorData.linkedIn}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-primary-600 hover:text-primary-700 font-medium flex items-center space-x-1"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"/>
            </svg>
            <span>LinkedIn</span>
          </a>
        )}
        <a 
          href="/about"
          class="text-sm text-primary-600 hover:text-primary-700 font-medium"
        >
          View full bio →
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Structured Data for Author -->
<script type="application/ld+json" set:html={JSON.stringify(authorSchema)} />