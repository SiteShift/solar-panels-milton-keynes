---
import Button from './Button.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 py-4">
  <div class="flex justify-center px-4 sm:px-6 lg:px-8">
    <nav class="bg-black/60 backdrop-blur-md border border-white/20 rounded-full px-8 py-3 flex items-center justify-between w-[60vw] max-w-[1100px]" role="navigation" aria-label="Primary">
      <div class="flex items-center">
        <img src="/Solar Panels Milton Keynes logo-cropped (1).svg" alt="Solar Panels Milton Keynes" class="h-12 w-auto" width="160" height="48" loading="eager" decoding="async" />
      </div>
      <div class="hidden md:flex space-x-8">
        <a href="/about" class="text-gray-300 hover:text-white font-lufga transition-colors text-base">about</a>
        <a href="/services" class="text-gray-300 hover:text-white font-lufga transition-colors text-base">services</a>
        <a href="/installers" class="text-gray-300 hover:text-white font-lufga transition-colors text-base">installers</a>
        <a href="/grants" class="text-gray-300 hover:text-white font-lufga transition-colors text-base">grants</a>
        <a href="/reviews" class="text-gray-300 hover:text-white font-lufga transition-colors text-base">reviews</a>
        <a href="/case-studies" class="text-gray-300 hover:text-white font-lufga transition-colors text-base">case studies</a>
        <a href="/faq" class="text-gray-300 hover:text-white font-lufga transition-colors text-base">faq</a>
        <a href="/sitemap" class="text-gray-300 hover:text-white font-lufga transition-colors text-base">sitemap</a>
      </div>
      <div class="flex items-center">
        <Button href="/contact" size="small" withArrow={true} data-cta="true">
          contact us
        </Button>
      </div>
    </nav>
  </div>
</header>


