---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const title = 'Corrections Policy | Milton Keynes Solar Panels';
const description = 'How to request a correction and how we handle content updates.';
---

<BaseLayout title={title} description={description}>
  <section class="py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs />
      <h1 class="text-4xl font-lufga text-text-dark mb-4">Corrections Policy</h1>
      <p class="text-neutral-700 mb-4">If you spot an error, please contact us at <a class="text-accent hover:underline" href="mailto:solarpanelsmiltonkeynes@gmail.com">solarpanelsmiltonkeynes@gmail.com</a>.</p>
      <ul class="list-disc pl-6 text-neutral-700 space-y-1">
        <li>We acknowledge requests within 3 business days.</li>
        <li>Verified errors are corrected promptly with an updated date.</li>
        <li>Material changes are noted at the bottom of the page.</li>
      </ul>
    </div>
  </section>
</BaseLayout>


