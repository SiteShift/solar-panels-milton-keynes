---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import AuthorBox from '../components/AuthorBox.astro';
import RelatedLinks from '../components/RelatedLinks.astro';
import PageHero from '../components/PageHero.astro';

const title = 'Common Solar Problems & Fixes | Milton Keynes';
const description = 'Typical issues (inverter faults, generation dips, monitoring) and how MK homeowners can resolve them.';
const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description,
  dateModified: new Date().toISOString(),
  author: { '@type': 'Person', name: 'Emily Harris' },
};
---

<BaseLayout title={title} description={description} structuredData={articleSchema}>
  <PageHero title="Common Solar Problems & Fixes" subtitle="Typical issues and how MK homeowners can resolve them" label="Troubleshooting" overlay={true} overlayStyle="dark" textLight={true} />
  <section class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs />
      <h1 class="text-4xl font-lufga text-text-dark mb-4">Common Solar Problems & Fixes</h1>
      <ul class="list-disc pl-6 text-neutral-700 space-y-2">
        <li><strong>Inverter errors:</strong> Check error code, ensure ventilation, contact installer for warranty support.</li>
        <li><strong>Generation dips:</strong> Inspect for new shading, check monitoring app, log weather patterns.</li>
        <li><strong>No export payments:</strong> Confirm smart meter export setup and SEG supplier enrollment.</li>
      </ul>
      <div class="mt-8"><AuthorBox /></div>
      <RelatedLinks links={[
        { href: '/installation', label: 'Installation process' },
        { href: '/seg', label: 'Smart Export Guarantee' },
        { href: '/battery-storage', label: 'Battery storage' },
        { href: '/faq/inverter-noise', label: 'FAQ: Are inverters noisy?' },
        { href: '/faq/shading-fixes', label: 'FAQ: Shading fixes' },
      ]} />
    </div>
  </section>
</BaseLayout>


