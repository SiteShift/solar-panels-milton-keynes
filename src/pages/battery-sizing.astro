---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import AuthorBox from '../components/AuthorBox.astro';
import RelatedLinks from '../components/RelatedLinks.astro';
import PageHero from '../components/PageHero.astro';

const title = 'Battery Sizing Guide | Milton Keynes';
const description = 'How to choose the right battery size (kWh) for your MK home based on usage and goals.';
const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description,
  dateModified: new Date().toISOString(),
  author: { '@type': 'Person', name: 'Emily Harris' },
};
---

<BaseLayout title={title} description={description} structuredData={articleSchema}>
  <PageHero title="Battery Sizing Guide" subtitle="Choose the right kWh for your MK home based on usage and goals" label="Battery sizing" overlay={true} overlayStyle="dark" textLight={true} />
  <section class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs />
      <h1 class="text-4xl font-lufga text-text-dark mb-4">Battery Sizing Guide</h1>
      <p class="text-neutral-700 mb-4">Typical MK households are well served by 5â€“10kWh batteries. Heavier evening use or EV charging can justify larger capacities. Aim to store daily excess generation without oversizing.</p>
      <div class="mt-8"><AuthorBox /></div>
      <RelatedLinks links={[
        { href: '/battery-storage', label: 'Battery storage overview' },
        { href: '/costs', label: 'Costs & payback' },
        { href: '/seg', label: 'Smart Export Guarantee' },
      ]} />
    </div>
  </section>
</BaseLayout>


