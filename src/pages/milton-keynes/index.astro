---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import PageHero from '../../components/PageHero.astro';
import towns from '../../data/towns.json';

const title = 'Areas We Serve | Milton Keynes Solar Panels';
const description = 'Find solar panel information and quotes for towns across Milton Keynes and nearby areas.';
---

<BaseLayout title={title} description={description}>
  <PageHero title="Areas We Serve" subtitle="Dedicated local pages for towns across Milton Keynes" label="Areas" overlay={true} overlayStyle="dark" textLight={true} />
  <section class="py-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs />
      <h1 class="text-4xl font-lufga text-text-dark mb-4">Areas We Serve</h1>
      <p class="text-neutral-700 mb-8">Explore dedicated pages for Milton Keynes towns. Get local guidance on costs, grants, and installation, then request your free quote.</p>
      <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
        {towns.map((t) => (
          <a href={`/milton-keynes/${t.slug}/solar-panels/`} class="block p-5 rounded-xl border border-gray-200 bg-white hover:border-accent/60 transition-colors">
            <h2 class="font-lufga text-text-dark">{t.name}</h2>
            <p class="text-sm text-neutral-600">Local guide and free quote</p>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>


