---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import AuthorBox from '../components/AuthorBox.astro';
import RelatedLinks from '../components/RelatedLinks.astro';
import PageHero from '../components/PageHero.astro';

const title = 'Export Tariffs (SEG) Comparison | Milton Keynes';
const description = 'Compare SEG export tariff types and considerations for MK homeowners.';
const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description,
  dateModified: new Date().toISOString(),
  author: { '@type': 'Person', name: 'Emily Harris' },
};
---

<BaseLayout title={title} description={description} structuredData={articleSchema}>
  <PageHero title="Export Tariffs (SEG) Comparison" subtitle="Compare SEG types and considerations for MK" label="SEG" overlay={true} overlayStyle="dark" textLight={true} />
  <section class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs />
      <h1 class="text-4xl font-lufga text-text-dark mb-4">Export Tariffs (SEG) Comparison</h1>
      <p class="text-neutral-700 mb-4">SEG rates vary by supplier and may be fixed, variable, or dependent on having a matching import tariff. Always check current offers and contract terms.</p>
      <div class="mt-8"><AuthorBox /></div>
      <RelatedLinks links={[
        { href: '/seg', label: 'Smart Export Guarantee basics' },
        { href: '/battery-storage', label: 'Battery storage & export' },
        { href: '/calculator', label: 'Savings calculator' },
      ]} />
    </div>
  </section>
</BaseLayout>


