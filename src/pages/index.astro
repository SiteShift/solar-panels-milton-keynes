---
import BaseLayout from '../layouts/BaseLayout.astro';
import Seo from '../components/Seo.astro';
import TrustHub from '../components/TrustHub.astro';
import Button from '../components/Button.astro';

// SEO data
const title = 'Solar Panels Milton Keynes | MCS Certified Installers | Free Quote';
const description = 'Cut energy bills by up to 70% with solar panels in Milton Keynes. MCS-certified installers. Free quotes, grants available. Call today for expert advice.';

// Structured data for LocalBusiness
const localBusinessSchema = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  '@id': 'https://solarpanels-miltonkeynes.com/#business',
  name: 'Milton Keynes Solar Guide',
  url: 'https://solarpanels-miltonkeynes.com',
  areaServed: 'Milton Keynes',
  telephone: '+44 1908 123456',
  image: 'https://solarpanels-miltonkeynes.com/logo.png',
  description: 'Professional solar panel installation service in Milton Keynes. MCS certified installers helping homeowners reduce energy bills with high-quality solar PV systems.',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Milton Keynes',
    addressRegion: 'Buckinghamshire',
    addressCountry: 'GB'
  },
  geo: {
    '@type': 'GeoCoordinates',
    latitude: 52.0406,
    longitude: -0.7594
  },
  serviceArea: {
    '@type': 'GeoCircle',
    geoMidpoint: {
      '@type': 'GeoCoordinates',
      latitude: 52.0406,
      longitude: -0.7594
    },
    geoRadius: 25000
  }
};

// Organization schema
const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  '@id': 'https://solarpanels-miltonkeynes.com/#organization',
  name: 'Milton Keynes Solar Guide',
  url: 'https://solarpanels-miltonkeynes.com',
  logo: 'https://solarpanels-miltonkeynes.com/logo.png',
  sameAs: [
    'https://www.facebook.com/mksolarpanels',
    'https://twitter.com/mksolarpanels'
  ]
};

// FAQ Schema
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  'mainEntity': [
    {
      '@type': 'Question',
      'name': 'How much do solar panels cost in Milton Keynes?',
      'acceptedAnswer': {
        '@type': 'Answer',
        'text': 'Most homes spend £5,000–£7,500 after grants. A typical 4kW system costs around £5,400 including installation, equipment, and VAT. With government grants like ECO4, eligible households can get solar panels installed for free.'
      }
    },
    {
      '@type': 'Question',
      'name': 'Do I need planning permission for solar panels in Milton Keynes?',
      'acceptedAnswer': {
        '@type': 'Answer',
        'text': 'Most residential solar installations fall under permitted development rights and don\'t require planning permission. However, listed buildings, conservation areas, or installations visible from the highway may need approval from Milton Keynes Council.'
      }
    },
    {
      '@type': 'Question',
      'name': 'How much can I save with solar panels?',
      'acceptedAnswer': {
        '@type': 'Answer',
        'text': 'Typical Milton Keynes homes save £650-£1,200 annually on electricity bills. With the Smart Export Guarantee, you\'ll also earn £150-£300 per year selling excess energy back to the grid. Over 25 years, total savings often exceed £20,000.'
      }
    },
    {
      '@type': 'Question',
      'name': 'What solar grants are available in Milton Keynes?',
      'acceptedAnswer': {
        '@type': 'Answer',
        'text': 'The ECO4 scheme offers grants up to £15,000 for eligible households. All solar installations qualify for 0% VAT (saving ~£1,300) and the Smart Export Guarantee pays you for excess energy. We handle all grant applications for you.'
      }
    },
    {
      '@type': 'Question',
      'name': 'How long does installation take?',
      'acceptedAnswer': {
        '@type': 'Answer',
        'text': 'Most residential solar installations are completed in one day. The full process from quote to switch-on typically takes 2-3 weeks, including surveys, permits, and grid connection approvals.'
      }
    }
  ]
};

// Service Schema
const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  'serviceType': 'Solar Panel Installation',
  'provider': {'@id': 'https://solarpanels-miltonkeynes.com/#business'},
  'areaServed': {'@type': 'Place', 'name': 'Milton Keynes'},
  'offers': {
    '@type': 'Offer',
    'priceRange': '£4,200-£9,800',
    'priceCurrency': 'GBP'
  }
};

const structuredData = [localBusinessSchema, organizationSchema, faqSchema, serviceSchema];
---

<BaseLayout title={title} description={description} structuredData={structuredData}>
  <Seo title={title} description={description} structuredData={structuredData} />
  
  <!-- Header -->
  <header class="fixed top-0 left-0 right-0 z-50 py-4">
    <div class="flex justify-center px-4 sm:px-6 lg:px-8">
