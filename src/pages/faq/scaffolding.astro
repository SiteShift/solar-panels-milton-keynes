---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const title = 'FAQ: Do you always need scaffolding?';
const description = 'When scaffolding is required for solar installs in Milton Keynes and what it covers.';
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    { '@type': 'Question', name: 'Do you always need scaffolding?', acceptedAnswer: { '@type': 'Answer', text: 'Yes for pitched roofs to ensure safe access and compliance. Tower-only setups are rare; full perimeter scaffolding is typical and included in quotes unless stated.' } },
  ],
};
---

<BaseLayout title={title} description={description} structuredData={faqSchema}>
  <section class="py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs />
      <h1 class="text-3xl font-lufga text-text-dark mb-4">Do you always need scaffolding?</h1>
      <p class="text-neutral-700">For pitched roofs, yes—scaffolding is standard for safety and quality. It’s usually included in fixed-price quotes.</p>
    </div>
  </section>
</BaseLayout>


