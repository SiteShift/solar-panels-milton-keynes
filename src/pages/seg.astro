---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import AuthorBox from '../components/AuthorBox.astro';
import RelatedLinks from '../components/RelatedLinks.astro';
const title = 'Smart Export Guarantee (SEG) | Milton Keynes';
const description = 'How SEG works in Milton Keynes: typical rates, suppliers, and how to get paid for exporting excess solar power.';
const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description,
  dateModified: new Date().toISOString(),
  author: {
    '@type': 'Person',
    name: 'Emily Harris',
  },
};
---

<BaseLayout title={title} description={description} structuredData={articleSchema}>
  <section class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs />
      <h1 class="text-4xl font-lufga text-text-dark mb-4">Smart Export Guarantee (SEG)</h1>
      <p class="text-neutral-700 mb-6">SEG pays you for the electricity you export to the grid. Rates vary by supplier and can change, so compare regularly and ensure your meter supports export measurements.</p>
      <h2 class="text-2xl font-lufga text-text-dark mb-2">What you need</h2>
      <ul class="list-disc pl-6 space-y-2 text-neutral-700">
        <li>MCS certificate and commissioning documents</li>
        <li>Smart meter capable of recording export</li>
        <li>Supplier application and standing terms</li>
      </ul>
      <div class="mt-6 p-6 rounded-xl border border-gray-200 bg-white">
        <h2 class="text-xl font-lufga text-text-dark mb-2">Supplier comparison (indicative)</h2>
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-2">Supplier</th>
              <th class="text-left py-2">Export rate (p/kWh)</th>
              <th class="text-left py-2">Notes</th>
            </tr>
          </thead>
          <tbody class="text-neutral-700">
            <tr class="border-b border-gray-100">
              <td class="py-2">Supplier A</td>
              <td class="py-2">5.5</td>
              <td class="py-2">Fixed; 12â€‘month term</td>
            </tr>
            <tr class="border-b border-gray-100">
              <td class="py-2">Supplier B</td>
              <td class="py-2">4.8</td>
              <td class="py-2">Variable; monthly updates</td>
            </tr>
            <tr>
              <td class="py-2">Supplier C</td>
              <td class="py-2">6.0</td>
              <td class="py-2">Requires matching import tariff</td>
            </tr>
          </tbody>
        </table>
        <p class="text-xs text-neutral-500 mt-2">Rates are examples only. Always check current offers.</p>
      </div>
      <div class="mt-8">
        <AuthorBox />
      </div>
      <RelatedLinks links={[
        { href: '/costs', label: 'Solar costs & payback' },
        { href: '/battery-storage', label: 'Battery storage guide' },
        { href: '/grants', label: 'Grants & incentives' },
        { href: '/faq/smart-meter-export', label: 'FAQ: Smart meter for export/SEG' },
        { href: '/faq/tariffs', label: 'FAQ: Tariffs with solar' },
      ]} />
    </div>
  </section>
</BaseLayout>


