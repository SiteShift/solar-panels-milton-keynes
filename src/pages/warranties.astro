---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import AuthorBox from '../components/AuthorBox.astro';
import RelatedLinks from '../components/RelatedLinks.astro';
import PageHero from '../components/PageHero.astro';

const title = 'Warranties & Guarantees | Milton Keynes Solar Panels';
const description = 'Understand panel performance, product, inverter, and workmanship warranties for MK installs.';
const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description,
  dateModified: new Date().toISOString(),
  author: { '@type': 'Person', name: 'Emily Harris' },
};
---

<BaseLayout title={title} description={description} structuredData={articleSchema}>
  <PageHero title="Warranties & Guarantees" subtitle="Panel performance, product, inverter, and workmanship warranties" label="Warranties" overlay={true} overlayStyle="dark" textLight={true} />
  <section class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs />
      <h1 class="text-4xl font-lufga text-text-dark mb-4">Warranties & Guarantees</h1>
      <ul class="list-disc pl-6 text-neutral-700 space-y-2">
        <li><strong>Panel performance:</strong> Typically ~84–87% output guaranteed at year 25.</li>
        <li><strong>Panel product:</strong> 10–25 years against manufacturing defects (brand dependent).</li>
        <li><strong>Inverter:</strong> 5–12 years standard; extensions available.</li>
        <li><strong>Workmanship:</strong> Installer guarantee, often 2–10 years.</li>
      </ul>
      <div class="mt-8"><AuthorBox /></div>
      <RelatedLinks links={[
        { href: '/inverters', label: 'Inverters: String vs Micro' },
        { href: '/panel-brands', label: 'Best panel brands' },
        { href: '/costs', label: 'Costs & payback' },
        { href: '/faq/panel-lifespan', label: 'FAQ: How long do panels last?' },
      ]} />
    </div>
  </section>
</BaseLayout>


